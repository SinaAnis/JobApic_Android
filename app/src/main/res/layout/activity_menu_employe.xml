<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Menu employé"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonEmployeur"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:text="Employeur" />

        <Button
            android:id="@+id/buttonEmploye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employé" />

    </LinearLayout>
    <Button
        android:id="@+id/buttonMurEmploye"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mur"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.16" />

    <Button
        android:id="@+id/buttonConsulterAnnonce"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulter les annonces"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.17" />

    <Button
        android:id="@+id/buttonProfil"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.18" />

    <Button
        android:id="@+id/buttonMesCandidatures"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes Candidatures"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.25" />

    <Button
        android:id="@+id/buttonParametres"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier Paramètres"
        android:textColor="@android:color/background_light"
        android:layout_weight="0.24" />

</LinearLayout>