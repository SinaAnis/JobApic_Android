<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_modif_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.boris.pjs4_61.modifProfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Profil de "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="31dp"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text=" nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_alignBaseline="@+id/textView27"
            android:layout_alignBottom="@+id/textView27"
            android:layout_toEndOf="@+id/textView27" />

        <TextView
            android:text=" prénom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_alignBaseline="@+id/textView29"
            android:layout_alignBottom="@+id/textView29"
            android:layout_toEndOf="@+id/textView29" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_marginTop="42dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView27"
            android:layout_alignStart="@+id/textView27"
            android:layout_marginStart="20dp" />

        <Button
            android:text="Modifier photo de profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonModifPhoto"
            android:textSize="13sp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/textView29"
            android:layout_alignBottom="@+id/imageView" />

        <TextView
            android:text="Date de naissance :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:id="@+id/textView49"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/textView27" />

        <TextView
            android:text="Adresse :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/textView50"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView49"
            android:layout_alignStart="@+id/textView49" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText9"
            android:layout_alignTop="@+id/textView49"
            android:layout_alignStart="@+id/buttonModifPhoto"
            android:layout_alignBottom="@+id/textView49" />

        <TextView
            android:text="Mail :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/textView51"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView50"
            android:layout_alignStart="@+id/textView50" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_alignTop="@+id/textView50"
            android:layout_toEndOf="@+id/textView49"
            android:layout_alignBottom="@+id/textView50" />

        <TextView
            android:text="Téléphone :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/textView52"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView51"
            android:layout_alignStart="@+id/textView51" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText11"
            android:layout_alignTop="@+id/textView51"
            android:layout_alignStart="@+id/editText10"
            android:layout_alignBottom="@+id/textView51" />

        <TextView
            android:text="Situation :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/textView53"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView52"
            android:layout_alignStart="@+id/textView52" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText12"
            android:layout_alignTop="@+id/textView52"
            android:layout_alignStart="@+id/editText11"
            android:layout_alignBottom="@+id/textView52" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText14"
            android:layout_alignTop="@+id/textView53"
            android:layout_alignStart="@+id/editText12"
            android:layout_alignBottom="@+id/textView53" />

        <TextView
            android:text="Mot de passe :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textView47"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView53"
            android:layout_alignStart="@+id/textView53" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText13"
            android:layout_alignTop="@+id/textView47"
            android:layout_alignStart="@+id/editText9"
            android:layout_alignBottom="@+id/textView47" />

        <Button
            android:text="Enregistrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:id="@+id/buttonEnregistrer"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/buttonModifPhoto" />

    </RelativeLayout>
</LinearLayout>
